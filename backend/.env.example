# Backend .env
PORT=3001
HOST=0.0.0.0

# API key for protecting endpoints
API_KEY=CHANGE_ME

# Default webhook (used when creating sessions without a custom URL)
WEBHOOK_URL=http://localhost:4000/webhook/wa

# Image compression settings (sharp)
IMG_MAX_WIDTH=1280
IMG_QUALITY=70

# Puppeteer flags (comma-separated)
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu,--no-zygote,--no-first-run

# Allow CORS from anywhere (adjust for production)
CORS_ORIGIN=*

# Database connection (Postgres via Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/wa?schema=public"
